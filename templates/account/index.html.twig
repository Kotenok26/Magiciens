{% extends 'base.html.twig' %}

{% block title %}Mon compte - Les magiciens du Fouet{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Accéder au backoffice</a></small><br/>
    {% endif %}

    {{ app.user.firstname }}, bienvenue dans votre espace personnel !<br>
    <br/><hr>

    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/unlock.svg') }}" alt="Modifier mon mot de passe"><br/>
                <a href="{{ path('account_password') }}"> Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/address.svg') }}" alt="Gérer mes adresses"><br/>
                <a href="{{ path('account_address') }}"> Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/shopping-bag.svg') }}" alt="Mes commandes"><br/>
                <a href="{{ path('account_order') }}" > Mes commandes</a>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}
